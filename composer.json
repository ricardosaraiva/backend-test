{
    "require": {
        "slim/slim": "^3.12",
        "doctrine/orm": "^2.5",
        "doctrine/common": "^2.7",
        "doctrine/migrations": "^1.5",
        "respect/validation": "^1.1",
        "tuupola/slim-jwt-auth": "^2.4",
        "firebase/php-jwt": "^5.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.5"
    },
    "autoload": {
        "psr-4": {
            "Controller\\" : "src/controller",
            "Model\\" : "src/model",
            "Entity\\" : "src/entity",
            "Test\\" : "test",
            "Validation\\" : "src/validation"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "mkdir data",
            "php vendor/bin/doctrine orm:schema-tool:update --force"
        ]
    }
}
